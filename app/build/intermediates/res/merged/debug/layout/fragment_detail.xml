<ScrollView android:id="@+id/detailsScrollView"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

   <GridLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:columnCount="2"
      android:useDefaultMargins="true">

      <TextView
         android:id="@+id/nameLabelTextView"
         style="@style/TripLabelTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="0"
         android:layout_row="0"
         android:text="@string/label_name"/>

      <TextView
         android:id="@+id/nameTextView"
         style="@style/TripTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_row="0"/>

      <TextView
         android:id="@+id/fromLabelTextView"
         style="@style/TripLabelTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="0"
         android:layout_row="1"
         android:text="@string/label_from"/>

      <TextView
         android:id="@+id/fromTextView"
         style="@style/TripTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_row="1"/>

      <TextView
         android:id="@+id/toLabelTextView"
         style="@style/TripLabelTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="0"
         android:layout_row="2"
         android:text="@string/label_to"/>

      <TextView
         android:id="@+id/toTextView"
         style="@style/TripTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_row="2"/>

      <TextView
         android:id="@+id/departLabelTextView"
         style="@style/TripLabelTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="0"
         android:layout_row="3"
         android:text="@string/label_depart"/>

      <TextView
         android:id="@+id/departTextView"
         style="@style/TripTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_row="3"/>

      <TextView
          android:id="@+id/returnLabelTextView"
          style="@style/TripLabelTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="0"
          android:layout_row="4"
          android:text="@string/label_depart"/>

      <TextView
          android:id="@+id/returnTextView"
          style="@style/TripTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_row="4"/>

      <TextView
          android:id="@+id/airfareLabelTextView"
          style="@style/TripLabelTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="0"
          android:layout_row="5"
          android:text="@string/label_airfare"/>

      <TextView
          android:id="@+id/airfareTextView"
          style="@style/TripTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_row="5"/>

      <TextView
          android:id="@+id/hotelLabelTextView"
          style="@style/TripLabelTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="0"
          android:layout_row="6"
          android:text="@string/label_hotel"/>

      <TextView
          android:id="@+id/hotelTextView"
          style="@style/TripTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_row="6"/>

      <TextView
          android:id="@+id/rentalLabelTextView"
          style="@style/TripLabelTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="0"
          android:layout_row="7"
          android:text="@string/label_rental"/>

      <TextView
          android:id="@+id/rentalTextView"
          style="@style/TripTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_row="7"/>

      <TextView
          android:id="@+id/totalcostLabelTextView"
          style="@style/TripLabelTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="0"
          android:layout_row="8"
          android:text="@string/label_totalcost"/>

      <TextView
          android:id="@+id/totalcostTextView"
          style="@style/TripTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_row="8"/>

   </GridLayout>
</ScrollView>